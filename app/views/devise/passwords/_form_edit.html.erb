<%= form_for(resource, as: resource_name, url: password_path(resource_name),
  html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="form-group text-left">
    <%= f.label :password, t("new_pass") %>
    <% if @minimum_password_length %>
    <em><%= t("min_pass", min_pass: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control form-control-fix",
      autofocus: true, autocomplete: "new-password" %>
  </div>
  <div class="form-group text-left">
    <%= f.label :password_confirmation, t("password_confirmation") %>
    <%= f.password_field :password_confirmation, class: "form-control form-control-fix", autocomplete: "off" %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary float-right" %>
<% end %>
