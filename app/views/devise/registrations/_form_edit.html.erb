<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
  html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="change-password-form">
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control", autofocus: true,
        autocomplete: "email", disabled: true %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-group">
      <%= f.label :name, t("name") %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phonenumber, t("phone_number") %>
      <%= f.telephone_field :phonenumber, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, t("new_pass") %> <i><%= t("note_pass") %></i><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, t("password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :current_password, t("current_password") %>  <i><%= t("confirm_change") %></i>
      <br/>
      <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit t("submit"), class: "btn btn-primary" %>
  </div>
<% end %>
