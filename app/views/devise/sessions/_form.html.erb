<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group text-left">
    <%= f.label :email, t("email") %>
    <%= f.email_field :email, class: "form-control form-control-fix" %>
  </div>
  <div class="form-group text-left">
    <%= f.label :password, t("password") %>
    <%= link_to t("forgot_password"), new_user_password_path %>
    <%= f.password_field :password, class: "form-control form-control-fix" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="form-group text-left">
      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span><%= t("remember") %></span>
      <% end %>
    </div>
  <% end %>
  <div class="form-group text-left">
    <%= link_to t("signup_now"), new_user_registration_path, class: "btn btn-link float-left" %>
    <%= f.submit t("login"), class: "btn btn-primary float-right" %>
    <%= link_to t("resend_mail"), user_confirmation_path,
      class: "btn btn-link ", data: { method: :post } %>
  </div>
<% end %>

<div class="form-group text-left">
  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}",
        omniauth_authorize_path(resource_name, provider) %><br />
    <% end %>
  <% end %>
</div>
